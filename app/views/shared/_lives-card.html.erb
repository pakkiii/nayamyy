<% @lives.each do |life| %>
  <% if life.tired_id == 2 %>
    <div class=lives-card>
      <div class="card-1">
        <i class="fas fa-house-user"></i>
      </div>
      <div class="card-2">
        <div class="card-2-title">
          <p>Title</p>
        </div>
        <div class="card-2-title-2">
          <%= life.title%>
        </div>
        
      </div>
      <div class="card-3">
        <%= time_ago_in_words(life.created_at) %>前
      </div>
    </div>
